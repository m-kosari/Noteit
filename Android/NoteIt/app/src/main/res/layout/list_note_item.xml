<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="200dp">

    <ImageView
        android:id="@+id/img_list_item_node"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/ic_profile"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/ll_list_item_node"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/tv_bg_note_item"
        android:padding="10dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_list_item_node"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:textSize="20sp"
            android:textStyle="normal"
            android:textAlignment="textStart"
            android:text=" this is sample text \n create this app by mohammad kosari"/>

        <TextView
            android:id="@+id/tv_list_item_node_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:text=" date"/>

    </LinearLayout>





</LinearLayout>